# Environment Configuration Template
# Copy this file to .env and fill in your actual credentials

# ============================================================================
# Application Settings
# ============================================================================
NODE_ENV=development
PORT=4000
ML_SERVICE_PORT=8000
FRONTEND_PORT=3000

# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGODB_URI=mongodb://localhost:27017/tenant_churn
MONGODB_TEST_URI=mongodb://localhost:27017/tenant_churn_test
MONGODB_MAX_POOL_SIZE=10
MONGODB_TIMEOUT=5000

# ============================================================================
# Snowflake Data Warehouse
# ============================================================================
SNOWFLAKE_ACCOUNT=your-account.snowflakecomputing.com
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=TENANT_CHURN_WH
SNOWFLAKE_DATABASE=TENANT_ANALYTICS
SNOWFLAKE_SCHEMA=ANALYTICS
SNOWFLAKE_ROLE=TENANT_ANALYST

# ============================================================================
# AWS Configuration
# ============================================================================
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_MODELS=tenant-churn-models
S3_BUCKET_DATA=tenant-churn-data
ECR_REPOSITORY=tenant-churn-prediction

# ============================================================================
# Palantir Foundry
# ============================================================================
FOUNDRY_HOST=your-stack.palantirfoundry.com
FOUNDRY_TOKEN=your_api_token
FOUNDRY_ONTOLOGY_RID=ri.ontology.main.ontology.your-rid
FOUNDRY_DATASET_RID=ri.foundry.main.dataset.your-rid
FOUNDRY_AIP_ENABLED=true

# ============================================================================
# Informatica PowerCenter
# ============================================================================
INFORMATICA_DOMAIN=your-domain.informaticacloud.com
INFORMATICA_USERNAME=your_username
INFORMATICA_PASSWORD=your_password
INFORMATICA_SESSION_ID=tenant_churn_etl
INFORMATICA_WORKFLOW_NAME=tenant_data_pipeline

# ============================================================================
# Looker Configuration
# ============================================================================
LOOKER_BASE_URL=https://your-company.looker.com
LOOKER_CLIENT_ID=your_client_id
LOOKER_CLIENT_SECRET=your_client_secret
LOOKER_MODEL=tenant_churn_analytics

# ============================================================================
# Authentication & Security
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:3000
API_RATE_LIMIT=100

# Okta SSO (optional)
OKTA_DOMAIN=your-company.okta.com
OKTA_CLIENT_ID=your_okta_client_id
OKTA_CLIENT_SECRET=your_okta_client_secret

# ============================================================================
# ML Model Configuration
# ============================================================================
MODEL_VERSION=1.0.0
MODEL_RETRAIN_INTERVAL_DAYS=30
PREDICTION_THRESHOLD=0.5
FEATURE_STORE_TYPE=snowflake
MIN_TRAINING_SAMPLES=1000

# ============================================================================
# Retention Campaign Configuration
# ============================================================================
HIGH_RISK_THRESHOLD=80
MEDIUM_RISK_THRESHOLD=50
RETENTION_WINDOW_DAYS=90
CAMPAIGN_EMAIL_ENABLED=true
CAMPAIGN_SMS_ENABLED=false

# SendGrid for email campaigns
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=retention@yourcompany.com

# Twilio for SMS campaigns
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================================================
# Monitoring & Logging
# ============================================================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
DATADOG_API_KEY=your_datadog_api_key
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_PALANTIR_INTEGRATION=true
FEATURE_AUTO_RETENTION_WORKFLOW=true
FEATURE_REAL_TIME_PREDICTIONS=true
FEATURE_AB_TESTING=false

# ============================================================================
# Development Settings
# ============================================================================
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
SEED_DATABASE=true
SAMPLE_DATA_SIZE=1000
